---
import Breadcrumbs from "../../components/links/Breadcrumbs.astro";
import { appUrls } from "../../consts/appUrls";
import Layout from "../../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";

const breadcrumbs = [
    { label: "Home", linkTo: appUrls.home.base },
    { label: "Galerij", linkTo: appUrls.galery.base },
    { label: "Gyproc- & schilderwerken" },
];
---

<Layout title="Gyproc- en schilderwerken">
    <Breadcrumbs breadcrumbs={breadcrumbs} />
    <article
        class="px-6 my-4 grid grid-cols-1 gap-4 sm:grid-cols-2 xl:grid-cols-3"
    >
        <div>
            <Image
                alt="Gyprocwerken"
                src={import(
                    "../../images/plaster-boards-and-painting/plaster-boards-img02.jpg"
                )}
                class="mb-3"
            />
            <Image
                alt="Gyprocwerken"
                src={import(
                    "../../images/plaster-boards-and-painting/plaster-boards-img03.jpg"
                )}
            />
        </div>
        <Image
            alt="Gyprocwerken"
            src={import(
                "../../images/plaster-boards-and-painting/plaster-boards-img04.jpg"
            )}
        />
        <Image
            alt="Gyprocwerken"
            src={import(
                "../../images/plaster-boards-and-painting/plaster-boards-img06.jpg"
            )}
        />
        <Image
            alt="Gyprocwerken"
            src={import(
                "../../images/plaster-boards-and-painting/plaster-boards-img07.jpg"
            )}
        />
        <Image
            alt="Gyprocwerken traphal"
            src={import(
                "../../images/plaster-boards-and-painting/plaster-boards-img08.jpeg"
            )}
        />
        <div class="sm:flex sm:flex-col sm:justify-between">
            <Image
                alt="Schilderwerken"
                src={import(
                    "../../images/plaster-boards-and-painting/painting-img01.jpg"
                )}
                class="mb-4"
            />
            <Image
                alt="Schilderwerken"
                src={import(
                    "../../images/plaster-boards-and-painting/painting-img02.jpeg"
                )}
            />
        </div>
        <div class="sm:flex sm:flex-col sm:justify-between">
            <Image
                alt="Schilderwerken"
                src={import(
                    "../../images/plaster-boards-and-painting/painting-img04.jpeg"
                )}
                class="mb-4"
            />
            <Image
                alt="Schilderwerken keuken"
                src={import(
                    "../../images/plaster-boards-and-painting/painting-img05.jpeg"
                )}
            />
        </div>
        <Image
            alt="Voordeur PVC zwart geschilderd"
            src={import(
                "../../images/plaster-boards-and-painting/painting-img07.jpeg"
            )}
        />
        <Image
            alt="Wc behangen met bloemenmotief"
            src={import(
                "../../images/plaster-boards-and-painting/painting-img03.jpeg"
            )}
        />
        <div class="sm:flex sm:flex-col sm:justify-between">
            <Image
                alt="Gerenoveerde zolderverdieping"
                src={import(
                    "../../images/plaster-boards-and-painting/attic-renovated-plasterboards-painted-img01.jpeg"
                )}
                class="mb-4"
            />
            <Image
                alt="Houten garagepoort zwart geschilderd"
                src={import(
                    "../../images/plaster-boards-and-painting/painting-img06.jpeg"
                )}
            />
        </div>
    </article>
</Layout>

---
import Breadcrumbs from "../../components/links/Breadcrumbs.astro";
import { appUrls } from "../../consts/appUrls";
import Layout from "../../layouts/Layout.astro";
import CloudinaryImage from "../../components/CloudinaryImage.astro";

const image01 = "mbrenovatie/carpentry/floating-tv-closet-mortsel-img01.png";
const image02 = "mbrenovatie/carpentry/built-in-closet-kontich-img01.jpeg";
const image03 = "mbrenovatie/carpentry/built-in-closet-kontich-img03.jpg";
const image04 = "mbrenovatie/carpentry/built-in-closet-kontich-img06.jpg";
const image05 = "mbrenovatie/carpentry/tv-closet-img08.jpg";
const image06 = "mbrenovatie/kitchens/kitchen-img01.jpg";
const image07 =
    "mbrenovatie/bathrooms/bathroom-with-floating-closet-marble-kontich.jpg";
const image08 = "mbrenovatie/bathrooms/bathroom-with-floating-closet.jpg";
const image09 =
    "mbrenovatie/bathrooms/bathroom-with-floating-closet-kontich.jpg";

const breadcrumbs = [
    { label: "Home", linkTo: appUrls.home.base },
    { label: "Galerij", linkTo: appUrls.galery.base },
    { label: "Meubelmakerij" },
];
---

<Layout title="Schrijnwerkerij">
    <Breadcrumbs breadcrumbs={breadcrumbs} />
    <article
        class="px-6 my-4 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3"
    >
        <CloudinaryImage
            alt="Zwevend tv-meubel"
            src={image01}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Ingebouwde kast met beelden"
            src={image02}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Laag tv-meubel"
            src={image03}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Ingemaakte kast"
            src={image04}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Tv-meubel"
            src={image05}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Keuken met ingemaakte kasten"
            src={image06}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Badkamermeubel met twee opbouwlavabo's en spiegelkast"
            src={image07}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Zwevend badkamermeubel"
            src={image08}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Zwevend meubel met spiegel"
            src={image09}
            width="100%"
            height="100%"
        />
    </article>
</Layout>

---
import { appUrls } from "../../consts/appUrls";
import Layout from "../../layouts/Layout.astro";
import Breadcrumbs from "../../components/links/Breadcrumbs.astro";
import { Image } from "@astrojs/image/components";

const breadcrumbs = [
    { label: "Home", linkTo: appUrls.home.base },
    { label: "Galerij", linkTo: appUrls.galery.base },
    { label: "Schilder- en behangwerken" },
];
---

<Layout title="Schilderwerken">
    <Breadcrumbs breadcrumbs={breadcrumbs} />
    <article
        class="px-6 my-4 grid grid-cols-1 gap-4 sm:grid-cols-2 xl:grid-cols-3"
    >
        <Image
            alt="Schilderwerken woonkamer"
            src={import(
                "../../images/painting-and-wallpapers/painting-img08.jpg"
            )}
        />
        <Image
            alt="Schilderwerken slaapkamer"
            src={import(
                "../../images/painting-and-wallpapers/painting-img09.jpeg"
            )}
        />
        <Image
            alt="Gerenoveerde zolderverdieping"
            src={import(
                "../../images/plaster-boards/attic-renovated-plasterboards-painted-img01.jpeg"
            )}
        />
        <Image
            alt="Schilderwerken"
            src={import(
                "../../images/painting-and-wallpapers/painting-img04.jpeg"
            )}
        />
        <Image
            alt="Schilderwerken keuken"
            src={import(
                "../../images/painting-and-wallpapers/painting-img05.jpeg"
            )}
        />
        <Image
            alt="Muurbehang goud"
            src={import(
                "../../images/painting-and-wallpapers/painting-img10.jpeg"
            )}
        />
        <Image
            alt="Schilderwerken"
            src={import(
                "../../images/painting-and-wallpapers/painting-img02.jpeg"
            )}
        />
        <Image
            alt="Houten garagepoort zwart geschilderd"
            src={import(
                "../../images/painting-and-wallpapers/painting-img06.jpeg"
            )}
        />
        <Image
            alt="Wc behangen met bloemenmotief"
            src={import(
                "../../images/painting-and-wallpapers/painting-img03.jpeg"
            )}
        />
    </article>
</Layout>

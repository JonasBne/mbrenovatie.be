---
import { appUrls } from "../../consts/appUrls";
import Layout from "../../layouts/Layout.astro";
import Breadcrumbs from "../../components/links/Breadcrumbs.astro";
import CloudinaryImage from "../../components/CloudinaryImage.astro";

const image01 = "mbrenovatie/painting-and-wallpapers/painting-img08.jpg";
const image02 = "mbrenovatie/painting-and-wallpapers/painting-img09.jpeg";
const image03 = "mbrenovatie/floors-and-tiles/flooring-img06.jpeg";
const image04 = "mbrenovatie/painting-and-wallpapers/painting-img04.jpeg";
const image05 = "mbrenovatie/painting-and-wallpapers/painting-img05.jpeg";
const image06 = "mbrenovatie/painting-and-wallpapers/painting-img10.jpeg";
const image07 = "mbrenovatie/painting-and-wallpapers/painting-img02.jpeg";
const image08 = "mbrenovatie/painting-and-wallpapers/painting-img06.jpeg";
const image09 = "mbrenovatie/painting-and-wallpapers/painting-img03.jpeg";

const breadcrumbs = [
    { label: "Home", linkTo: appUrls.home.base },
    { label: "Galerij", linkTo: appUrls.galery.base },
    { label: "Schilder- en behangwerken" },
];
---

<Layout title="Schilderwerken">
    <Breadcrumbs breadcrumbs={breadcrumbs} />
    <article
        class="px-6 my-4 grid grid-cols-1 gap-4 sm:grid-cols-2 xl:grid-cols-3"
    >
        <CloudinaryImage
            alt="Schilderwerken woonkamer"
            src={image01}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Schilderwerken slaapkamer"
            src={image02}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Gerenoveerde zolderverdieping"
            src={image03}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Schilderwerken"
            src={image04}
            height="100%"
            width="100%"
        />
        <CloudinaryImage
            alt="Schilderwerken keuken"
            src={image05}
            height="100%"
            width="100%"
        />
        <CloudinaryImage
            alt="Muurbehang goud"
            src={image06}
            height="100%"
            width="100%"
        />
        <CloudinaryImage
            alt="Schilderwerken"
            src={image07}
            height="100%"
            width="100%"
        />
        <CloudinaryImage
            alt="Houten garagepoort zwart geschilderd"
            src={image08}
            height="100%"
            width="100%"
        />
        <CloudinaryImage
            alt="Wc behangen met bloemenmotief"
            src={image09}
            height="100%"
            width="100%"
        />
    </article>
</Layout>

---
import { appUrls } from "../../consts/appUrls";
import Layout from "../../layouts/Layout.astro";
import Breadcrumbs from "../../components/links/Breadcrumbs.astro";
import { Image } from "@astrojs/image/components";

const breadcrumbs = [
    { label: "Home", linkTo: appUrls.home.base },
    { label: "Galerij", linkTo: appUrls.galery.base },
    { label: "Schilderwerken" },
];
---

<Layout title="Schilderwerken">
    <Breadcrumbs breadcrumbs={breadcrumbs} />
    <article
        class="px-6 my-4 grid grid-cols-1 gap-4 sm:grid-cols-2 xl:grid-cols-3"
    >
        <Image
            alt="Schilderwerken"
            src={import(
                "../../images/plaster-boards-and-painting/painting-img01.jpg"
            )}
        />
        <Image
            alt="Schilderwerken"
            src={import(
                "../../images/plaster-boards-and-painting/painting-img02.jpeg"
            )}
        />
        <Image
            alt="Houten garagepoort zwart geschilderd"
            src={import(
                "../../images/plaster-boards-and-painting/painting-img06.jpeg"
            )}
        />
        <Image
            alt="Schilderwerken woonkamer"
            src={import(
                "../../images/plaster-boards-and-painting/painting-img08.jpg"
            )}
        />
        <Image
            alt="Schilderwerken slaapkamer"
            src={import(
                "../../images/plaster-boards-and-painting/painting-img09.jpeg"
            )}
        />
        <Image
            alt="Gerenoveerde zolderverdieping"
            src={import(
                "../../images/plaster-boards-and-painting/attic-renovated-plasterboards-painted-img01.jpeg"
            )}
        />
        <div class="xl:flex xl:flex-col xl:justify-around">
            <Image
                alt="Schilderwerken"
                src={import(
                    "../../images/plaster-boards-and-painting/painting-img04.jpeg"
                )}
            />
            <Image
                alt="Schilderwerken keuken"
                src={import(
                    "../../images/plaster-boards-and-painting/painting-img05.jpeg"
                )}
            />
        </div>
        <Image
            alt="Wc behangen met bloemenmotief"
            src={import(
                "../../images/plaster-boards-and-painting/painting-img03.jpeg"
            )}
        />
        <Image
            alt="Voordeur PVC zwart geschilderd"
            src={import(
                "../../images/plaster-boards-and-painting/painting-img07.jpeg"
            )}
        />
    </article>
</Layout>

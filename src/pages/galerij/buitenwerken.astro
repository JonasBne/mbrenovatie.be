---
import Breadcrumbs from "../../components/links/Breadcrumbs.astro";
import { appUrls } from "../../consts/appUrls";
import Layout from "../../layouts/Layout.astro";
import CloudinaryImage from "../../components/CloudinaryImage.astro";

const image01 = "mbrenovatie/outside/outside-img03.jpg";
const image02 = "mbrenovatie/outside/outside-img02.jpg";
const image03 = "mbrenovatie/outside/outside-img05.jpeg";
const image04 = "mbrenovatie/outside/outside-img06.jpeg";
const image05 = "mbrenovatie/outside/outside-img01.jpg";
const image06 = "mbrenovatie/outside/outside-img04.jpeg";

const breadcrumbs = [
    { label: "Home", linkTo: appUrls.home.base },
    { label: "Galerij", linkTo: appUrls.galery.base },
    { label: "Buitenwerken" },
];
---

<Layout title="Buitenwerken">
    <Breadcrumbs breadcrumbs={breadcrumbs} />
    <article
        class="px-6 my-4 grid grid-cols-1 gap-4 sm:grid-cols-2 xl:grid-cols-3"
    >
        <CloudinaryImage
            alt="Zwembad met houten loopplanken"
            src={image01}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Houten wand en tuinhuis"
            src={image02}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Vernieuwde houten voordeur"
            src={image03}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Gevelwerken met stelling"
            src={image04}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Gerenoveerde gevel"
            src={image05}
            width="100%"
            height="100%"
        />
        <CloudinaryImage
            alt="Houten tuinwand"
            src={image06}
            width="100%"
            height="100%"
        />
    </article>
</Layout>

---
import Layout from "../layouts/Layout.astro";

const inputLabelStyles =
    "block uppercase tracking-wide text-gray-700 text-xs font-light mb-2";

const inputFieldStyles =
    "appearance-none block w-full bg-gray-50 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white";
---

<Layout title="Contact">
    <p class="px-6 mt-6 font-bold">Contact</p>
    <p class="px-6 mt-2 font-light">
        Stuur ons gerust een bericht met jouw vraag en we helpen je graag
        verder!
    </p>
    <article class="px-6 mt-6">
        <form class="w-full max-w-lg mb-6">
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full md:w-1/2 px-3 md:mb-0">
                    <label class={inputLabelStyles} for="first-name">
                        Voornaam *</label
                    >
                    <input
                        class={inputFieldStyles}
                        id="first-name"
                        type="text"
                    />
                </div>
                <div class="w-full md:w-1/2 px-3">
                    <label class={inputLabelStyles} for="last-name">
                        Achternaam *
                    </label>
                    <input
                        class={inputFieldStyles}
                        id="last-name"
                        type="text"
                    />
                </div>
                <div class="w-full md:w-1/2 px-3">
                    <label class={inputLabelStyles} for="subject">
                        Onderwerp *
                    </label>
                    <input class={inputFieldStyles} id="subject" type="text" />
                </div>
                <div class="w-full md:w-1/3 px-3 md:mb-0">
                    <label class={inputLabelStyles} for="email">Email *</label>
                    <input class={inputFieldStyles} id="email" type="email" />
                </div>
                <div class="w-full md:w-1/3 px-3 md:mb-0">
                    <label class={inputLabelStyles} for="message">
                        Bericht *
                    </label>
                    <textarea class={inputFieldStyles} id="message"></textarea>
                </div>
            </div>
            <div>
                <button
                    class="text-white rounded font-light border border-gray-800 bg-gray-800 text-center p-3"
                    >Verzenden</button
                >
            </div>
        </form>
    </article>
</Layout>

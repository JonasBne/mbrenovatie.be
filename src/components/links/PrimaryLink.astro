---
import classnames from "classnames";

export interface Props {
    styles?: string;
    label: string;
    linkTo: string;
}

const { label, linkTo, styles } = Astro.props;

const defaultStyles =
    "px-8 py-3 text-white rounded font-light border border-gray-800 bg-gray-800 text-center";
---

<a class={classnames(defaultStyles, styles ? styles : "")} href={linkTo}
    >{label}</a
>
